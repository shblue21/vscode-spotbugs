{
  "name": "vscode-spotbugs",
  "displayName": "Spotbugs",
  "description": "Visual Studio Code extension for Spotbugs",
  "version": "0.0.1",
  "publisher": "shblue21",
  "icon": "images/spotbugs_icon.png",
  "author": {
    "name": "shblue21",
    "email": "shblue21@naver.com.com",
    "url": "https://shblue21.github.io"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shblue21/vscode-spotbugs"
  },
  "categories": [
    "Linters"
  ],
  "keywords": [
    "Java",
    "Code Analysis",
    "Spotbugs",
    "FindBugs"
  ],
  "activationEvents": [
    "onLanguage:java",
    "onCommand:spotbugs.findbugs",
    "onCommand:spotbugs.runFile"
  ],
  "main": "./out/extension.js",
  "capabilities": {
    "virtualWorkspaces": true,
    "untrustedWorkspaces": {
      "supported": "limited"
    }
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "spotbugs-container",
          "title": "Spotbugs",
          "icon": "images/spotbugs_icon.png"
        }
      ]
    },
    "views": {
      "spotbugs-container": [
        {
          "id": "spotbugs-view",
          "name": "Spotbugs"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Spotbugs",
      "properties": {
        "spotbugs.effort": {
          "type": "string",
          "default": "Default",
          "enum": [
            "Default",
            "Min",
            "Less",
            "Max"
          ],
          "enumDescriptions": [
            "Run several analyses to find bugs",
            "Disables several analyses that increase precision but also increase memory consumption.",
            "Disables some analyses that increase precision but also increase memory consumption.",
            "Enable analyses which increase precision and find more bugs, but which may require more memory and take more time to complete"
          ],
          "markdownDescription": "Set analysis effort level.",
          "scope": "window",
          "order": 0
        },
        "spotbugs.java.home": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "(Optional) Set the JAVA_HOME environment variable used to run Spotbugs.",
          "scope": "machine-overridable",
          "order": 1
        },
        "spotbugs.plugins.file": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "(Optional) Set the path to the Spotbugs plugins file.",
          "scope": "machine-overridable",
          "order": 2
        }
      }
    },
    "commands": [
      {
        "command": "spotbugs.findbugs",
        "title": "Find bugs"
      },
      {
        "command": "java.spotbugs.run",
        "title": "Analyze selected File"
      },
      {
        "command": "java.spotbugs.run",
        "title": "Analyze Folder",
        "when": "explorerResourceIsFolder"
      },
      {
        "command": "java.spotbugs.analyze.folder",
        "title": "Analyze Folder"
      },
      {
        "command": "java.spotbugs.runWorkspace",
        "title": "Analyze this workspace",
        "icon": "$(search)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "java.spotbugs.runWorkspace",
          "when": "view == spotbugs-view",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "submenu": "spotbugs.context",
          "when": "resourceLangId == java || resourceExtname == .jar || explorerResourceIsFolder"
        }
      ],
      "spotbugs.context": [
        {
          "command": "java.spotbugs.run",
          "when": "!explorerResourceIsFolder",
          "group": "1_spotbugs@1"
        },
        {
          "command": "java.spotbugs.run",
          "when": "explorerResourceIsFolder",
          "group": "1_spotbugs@1"
        }
      ]
    },
    "submenus": [
      {
        "id": "spotbugs.context",
        "label": "Spotbugs"
      }
    ],
    "javaExtensions": [
      "./server/com.spotbugs.runner-0.0.1-SNAPSHOT.jar",
      "./server/spotbugs-runner-all.jar"
    ]
  },
  "scripts": {
    "clean": "rimraf out tsconfig.tsbuildinfo",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b -v",
    "watch": "tsc -b -v --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/client/test/runTest.js",
    "build-server": "node scripts/buildJdtlsExt.js"
  },
  "extensionDependencies": [
    "redhat.java"
  ],
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.0.13",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.31.0",
    "glob": "^11.0.3",
    "mocha": "^11.7.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "fs-extra": "^11.3.0",
    "vscode-extension-telemetry-wrapper": "^0.14.0"
  }
}
