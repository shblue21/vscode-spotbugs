{
  "name": "vscode-spotbugs",
  "displayName": "Spotbugs",
  "description": "Visual Studio Code extension for Spotbugs",
  "version": "0.0.10",
  "publisher": "shblue21",
  "icon": "images/spotbugs_icon.png",
  "author": {
    "name": "shblue21",
    "email": "shblue21@naver.com",
    "url": "https://shblue21.github.io"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shblue21/vscode-spotbugs"
  },
  "license": "MIT",
  "categories": [
    "Linters",
    "Other"
  ],
  "keywords": [
    "java",
    "spotbugs",
    "findbugs",
    "static-analysis",
    "linter",
    "code-quality",
    "bug-detection",
    "code-scanning",
    "security",
    "sast"
  ],
  "main": "./out/extension.js",
  "capabilities": {
    "virtualWorkspaces": true,
    "untrustedWorkspaces": {
      "supported": "limited"
    }
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "spotbugs-container",
          "title": "Spotbugs",
          "icon": "images/spotbugs_icon.png"
        }
      ]
    },
    "views": {
      "spotbugs-container": [
        {
          "id": "spotbugs-view",
          "name": "Spotbugs"
        }
      ]
    },
    "configuration": [
      {
        "type": "object",
        "title": "SpotBugs: Analysis",
        "order": 0,
        "properties": {
          "spotbugs.analysis.effort": {
            "type": "string",
            "default": "default",
            "enum": [
              "min",
              "default",
              "max"
            ],
            "enumDescriptions": [
              "Disables several analyses that increase precision but also increase memory consumption.",
              "Run several analyses to find bugs",
              "Enable analyses which increase precision and find more bugs, but which may require more memory and take more time to complete"
            ],
            "markdownDescription": "Set analysis effort level.",
            "scope": "window"
          },
          "spotbugs.analysis.priorityThreshold": {
            "type": "number",
            "default": 9,
            "markdownDescription": "Report bugs with rank less than or equal to this value (1 most severe, 20 least). Leave unset to use default behavior.",
            "minimum": 1,
            "maximum": 20,
            "scope": "window"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "spotbugs.run",
        "title": "Analyze File/Folder"
      },
      {
        "command": "spotbugs.runWorkspace",
        "title": "Analyze this workspace",
        "icon": "$(search)"
      },
      {
        "command": "spotbugs.openBugLocation",
        "title": "Open Bug Location"
      },
      {
        "command": "spotbugs.exportSarif",
        "title": "Export SpotBugs Findings (SARIF)",
        "icon": "$(file-code)"
      },
      {
        "command": "spotbugs.resetResults",
        "title": "Reset SpotBugs Results",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "spotbugs.runWorkspace",
          "when": "view == spotbugs-view",
          "group": "navigation"
        },
        {
          "command": "spotbugs.exportSarif",
          "when": "view == spotbugs-view",
          "group": "navigation@1"
        },
        {
          "command": "spotbugs.resetResults",
          "when": "view == spotbugs-view",
          "group": "navigation@2"
        }
      ],
      "explorer/context": [
        {
          "submenu": "spotbugs.context",
          "when": "resourceLangId == java || resourceExtname == .jar || explorerResourceIsFolder"
        }
      ],
      "view/item/context": [
        {
          "command": "spotbugs.exportSarif",
          "when": "view == spotbugs-view && (viewItem == spotbugs.category || viewItem == spotbugs.pattern)",
          "group": "navigation@3"
        }
      ],
      "spotbugs.context": [
        {
          "command": "spotbugs.run",
          "when": "!explorerResourceIsFolder",
          "group": "1_spotbugs@1"
        },
        {
          "command": "spotbugs.run",
          "when": "explorerResourceIsFolder",
          "group": "1_spotbugs@1"
        }
      ]
    },
    "submenus": [
      {
        "id": "spotbugs.context",
        "label": "Spotbugs"
      }
    ],
    "javaExtensions": [
      "./server/com.spotbugs.runner.jar",
      "./server/spotbugs-runner-all.jar"
    ]
  },
  "scripts": {
    "clean": "rimraf out tsconfig.tsbuildinfo",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p .",
    "watch": "tsc -p . --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "build-server": "node scripts/buildJdtlsExt.js"
  },
  "extensionDependencies": [
    "redhat.java"
  ],
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.0.13",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "mocha": "^11.7.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "fs-extra": "^11.3.3",
    "node-sarif-builder": "^3.3.1",
    "vscode-extension-telemetry-wrapper": "^0.14.0"
  }
}
